<Window x:Class="Ccom.Pharmacy.Views.Common.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:Ccom.Pharmacy.Views.Common"
        WindowStyle="None"
        AllowsTransparency="True" 
		WindowStartupLocation="CenterOwner" 
		ResizeMode="NoResize"
	    Opacity="20" WindowState="Maximized" Background="#00000000" ShowInTaskbar="False">
    <Grid Background="{DynamicResource AccentColorBrush3}" >

        <common:ProgressRing  x:Name="progressBar" IsActive="True" Height="74" Width="74" Foreground="White"  />
        <Button x:Name="btnProgressClose" Content="Close" HorizontalAlignment="Right"  Height="25" Click="ButtonBase_OnClick" Margin="0,510,0,0" VerticalAlignment="Top"  Width="70"/>
    </Grid>
</Window>
